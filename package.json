{
  "private": true,
  "name": "codepan",
  "productName": "CodePan",
  "description": "Play with JS/CSS/HTML so simple it hurts",
  "details": "CodePan is where people prototype front-end apps, you are free to use it offline anytime anywhere.",
  "main": "src/index.js",
  "homepage": "https://codepan.js.org/",
  "version": "0.0.0",
  "repository": {},
  "scripts": {
    "test": "npm run lint",
    "lint": "xo",
    "dev": "poi",
    "build": "poi build",
    "surge": "npm run build && surge -p dist -d codepan.surge.sh",
    "deploy": "npm run build && ./deploy.sh",
    "report": "poi build --bundle-report"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "rem"
    ],
    "envs": [
      "browser"
    ],
    "extensions": [
      "vue"
    ],
    "plugins": [
      "html"
    ],
    "rules": {
      "no-new": 0,
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-unassigned-import": 0,
      "no-warning-comments": 0,
      "import/prefer-default-export": 0,
      "no-multi-assign": 0,
      "complexity": 0,
      "guard-for-in": 0,
      "unicorn/filename-case": 0,
      "import/no-webpack-loader-syntax": 0
    },
    "ignores": [
      "src/boilerplates/**"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-component": "^0.10.0",
    "eslint-config-rem": "^3.1.0",
    "eslint-plugin-html": "^3.0.0",
    "gh-pages": "^1.0.0",
    "offline-plugin": "^4.7.0",
    "poi": "next",
    "poi-preset-bundle-report": "^2.0.0",
    "postcss-nested": "^2.0.2",
    "postcss-property-lookup": "^2.0.0",
    "raw-loader": "^0.5.1",
    "uglify-loader": "^2.0.0",
    "xo": "^0.18.2"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.16.2",
    "babel-preset-vue": "^1.0.2",
    "babel-standalone": "^6.25.0",
    "browserified-pug": "^0.1.0",
    "codemirror": "^5.27.4",
    "element-ui": "^1.3.7",
    "emmet-codemirror": "emmetio/codemirror#webpack",
    "iframe": "^1.0.0",
    "marked3": "^0.4.0",
    "nprogress": "^0.2.0",
    "object-assign": "^4.1.1",
    "promise-polyfill": "^6.0.2",
    "reqjs": "^1.0.3",
    "vue-router": "^2.7.0",
    "vuex": "^2.3.1"
  }
}
